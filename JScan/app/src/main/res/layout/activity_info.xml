<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/main_activity_header_bg">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="260dp">

        <fragment
                android:id="@+id/fr_action_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                class="com.jscandic.uit.jscandictionary.CustomActionBarFragment"/>

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg"
                android:alpha="0.2"
                android:scaleType="centerCrop"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/fr_action_bar">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true">

                <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_logo_white"
                        android:layout_marginBottom="@dimen/small_margin_vertical"
                        android:alpha="0.9"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textSize="@dimen/sub_title_text_size"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:alpha="0.9"/>

                <TextView
                        android:id="@+id/tv_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:text="version code - version name"
                        android:textSize="@dimen/common_text_size"
                        android:alpha="0.9"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/large_margin_horizontal"
            android:paddingRight="@dimen/large_margin_horizontal"
            android:paddingTop="@dimen/medium_margin_vertical"
            android:paddingBottom="@dimen/medium_margin_vertical"
            android:background="@color/white_smoke">

        <LinearLayout
                android:id="@+id/ln_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageButton
                    android:layout_width="@dimen/commnon_btns_size"
                    android:layout_height="@dimen/commnon_btns_size"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/medium_margin_horizontal"
                    android:layout_marginBottom="@dimen/medium_margin_horizontal"
                    android:layout_marginLeft="@dimen/medium_margin_horizontal"
                    android:tint="?colorAccent"
                    android:src="@drawable/ic_update"
                    android:clickable="false"
                    style="@style/common_btns_style"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/small_margin_horizontal"
                    android:layout_gravity="center"
                    android:text="Update"
                    android:clickable="false"
                    android:textSize="@dimen/sub_title_text_size" />

        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimaryLine"/>

        <LinearLayout
                android:id="@+id/ln_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageButton
                    android:layout_width="@dimen/commnon_btns_size"
                    android:layout_height="@dimen/commnon_btns_size"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/medium_margin_horizontal"
                    android:layout_marginBottom="@dimen/medium_margin_horizontal"
                    android:layout_marginLeft="@dimen/medium_margin_horizontal"
                    android:tint="?colorAccent"
                    android:src="@drawable/ic_rating"
                    android:clickable="false"
                    style="@style/common_btns_style"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/small_margin_horizontal"
                    android:text="Ratting App"
                    android:clickable="false"
                    android:textSize="@dimen/sub_title_text_size" />
        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimaryLine"/>

        <LinearLayout
                android:id="@+id/ln_fanpage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageButton
                    android:layout_width="@dimen/commnon_btns_size"
                    android:layout_height="@dimen/commnon_btns_size"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/medium_margin_horizontal"
                    android:layout_marginBottom="@dimen/medium_margin_horizontal"
                    android:layout_marginLeft="@dimen/medium_margin_horizontal"
                    android:tint="?colorAccent"
                    android:src="@drawable/ic_facebook"
                    android:clickable="false"
                    style="@style/common_btns_style"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/small_margin_horizontal"
                    android:text="Fanpage"
                    android:clickable="false"
                    android:textSize="@dimen/sub_title_text_size" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_smoke">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/small_margin_vertical"
                android:layout_centerInParent="true">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Created by"
                    android:layout_gravity="center"
                    android:textSize="@dimen/small_text_size"
                    style="@style/common_tv_style"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A.H.P Team"
                    android:layout_marginLeft="@dimen/small_margin_vertical"
                    android:layout_gravity="center"
                    android:textSize="@dimen/small_text_size"
                    android:textStyle="bold"
                    style="@style/common_tv_style"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>